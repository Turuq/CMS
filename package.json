{
    "name": "Turuq CMS",
    "devDependencies": {
        "turbo": "latest",
        "prettier": "^3.2.5",
        "typescript": "^5.4.5"
    },
    "engines": {
        "node": ">=18"
    },
    "packageManager": "bun@1.1.27",
    "private": true,
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev",
        "start": "turbo run start",
        "lint": "turbo run lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\""
    },
    "workspaces": [
        "apps/*",
        "packages/*"
    ]
}